
{
  "version": 2,
  "builds": [
    {
      "src": "nexus/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3" }
    },
    
    {
      "src": "build_files.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "staticfiles"
      }
    }
  ],
  "buildCommand": "python manage.py collectstatic --noinput",
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "nexus/wsgi.py"
    }
  ],
  "env": {
    "PYTHONPATH": "nexus"
  }
}
